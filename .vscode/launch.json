{
  "version": "0.2.0",
  "configurations": [
    // Configuration for Node.js (Backend)
    {
      "type": "node",
      "request": "attach",
      "name": "Debug Backend (Node.js)",
      "skipFiles": ["<node_internals>/**"],
      "port": 9229,  // Same as --inspect default port
      "restart": true
    },
    // Configuration for React (Frontend)
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Frontend (React)",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend",
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "Debug Both (Frontend & Backend)",
      "configurations": ["Debug Backend (Node.js)", "Debug Frontend (React)"]
    }
  ]
}
